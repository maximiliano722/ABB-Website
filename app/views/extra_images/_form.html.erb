<%= form_with(model: extra_image) do |form| %>
  <% if extra_image.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(extra_image.errors.count, "error") %> prohibited this extra_image from being saved:</h2>

      <ul>
        <% extra_image.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :group %>
    <%= form.text_field :group %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>

  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>
  <% if :image == nil %>
        :image = image_tag("default.jpg", alt: extra_image.group)  
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
