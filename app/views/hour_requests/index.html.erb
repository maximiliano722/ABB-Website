<div>
  <p id="notice"><%= notice %></p>

  <h1>Hour Requests</h1>

  <table>
    <thead>
      <tr>
        <th>User ID</th>
        <th>Points</th>
        <th>Category</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @requests.each do |request| %>
        <tr>
          <% user = User.find(request.user_id) %>
          <td><%= user.name %></td>
          <td><%= request.points %></td>
          <td><%= request.category %></td>
          <td><%= request.description %></td>
          <td><%= link_to 'Show', request %></td>
          <td><%= link_to("Approve", {:action=>'approve', :id=>request.id})%></td>
          <td><%= link_to("Deny", {:action=>'deny', :id=>request.id})%></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Back', '/membership'%>
  <%= link_to 'New Hours Request', new_hour_request_path %>

</div>